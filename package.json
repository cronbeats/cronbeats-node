{
  "name": "@cronbeats/cronbeats-node",
  "version": "0.1.3",
  "description": "Cron job monitoring and heartbeat monitoring SDK for Node.js. Monitor scheduled tasks, background jobs, and cron jobs with simple ping telemetry. Get alerts when cron jobs fail, miss their schedule, or run too long.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "check": "npm run build && npm run test"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cron",
    "monitoring",
    "cron monitoring",
    "cron job monitoring",
    "heartbeat",
    "heartbeat monitoring",
    "ping",
    "ping telemetry",
    "scheduler",
    "scheduled tasks",
    "background jobs",
    "job monitoring",
    "alerting",
    "cron alerts",
    "devops",
    "cronbeats"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cronbeats/cronbeats-node.git"
  },
  "homepage": "https://github.com/cronbeats/cronbeats-node#readme",
  "bugs": {
    "url": "https://github.com/cronbeats/cronbeats-node/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
